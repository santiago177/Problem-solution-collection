#include <iostream>
#include <vector>

using namespace std;

int main()
{
    int n, m;
    vector<int> sam;
    cin>>n>>m;
    for(int a = 0; a < n; a++)
    {
	int t;
	cin>>t;
	sam.push_back(t);
    }
    int current = 0, buses = 0;
    for(int a = 0; a < n; a++)
    {
	current += sam[a];
	while(current > m)
	{
	    buses++;
	    current -= m;
	}
	while(1)
	{
	    cout<<"here"<<current<<" "<<sam[a+1]<<endl;
	    if(a+1 < n && current + sam[a+1] <= m)
	    {
		a++;
		current += sam[a];
		continue;
	    }
	    buses++;
	    break;
	}
	current = 0;
	cout<<a<<" "<<buses<<endl;
    }
    cout<<buses;
    return 0;
}
